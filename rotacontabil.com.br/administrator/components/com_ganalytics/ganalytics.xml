	<description>Google analytics data integrated in joomla.</description>
	<files folder="site">
		<filename>controller.php</filename>
		<filename>ganalytics.php</filename>
		<filename>index.html</filename>
		<folder>views</folder>
		<folder>models</folder>
		<folder>hiddenviews</folder>
	</files>
	<languages>
		<language tag="en-GB">site/languages/en-GB.com_ganalytics.ini</language>
		<language tag="de-DE">site/languages/de-DE.com_ganalytics.ini</language>
	</languages>
	<install>
		<sql>
			<file charset="utf8" driver="mysql">install.sql</file>
			<file driver="mysql">install.sql</file>
