		</sql>
	</uninstall>
	<administration>
		<menu>GAnalytics</menu>
		<submenu>
			<menu view="dashboard">Dashboard</menu>
			<menu view="config">Configuration</menu>
			<menu view="profiles">Profiles</menu>
			<menu view="tools">Tools</menu>
			<menu view="help">Help</menu>
