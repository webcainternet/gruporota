<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5.0">
	<name>GAnalytics Statistics Count</name>
	<author>Allon Moritz</author>
	<creationDate>June 2010</creationDate>
	<copyright>This module is released under the GNU/GPL License.
	</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html
		GNU/GPL</license>
	<authorEmail>info@g4j.laoneo.net
	</authorEmail>
	<authorUrl>g4j.laoneo.net</authorUrl>
	<version>1.0.0</version>
	<description>This module shows a list of different stats.</description>
	<files>
		<filename module="mod_ganalytics_stats_count">mod_ganalytics_stats_count.php
		</filename>
		<filename>index.html</filename>
		<filename>helper.php</filename>
		<folder>tmpl</folder>
	</files>
	<languages>
		<language tag="en-GB">languages/en-GB.mod_ganalytics_stats_count.ini</language>
		<language tag="de-DE">languages/de-DE.mod_ganalytics_stats_count.ini</language>
	</languages>
	<params addpath="/administrator/components/com_ganalytics/elements">
		<param name="accountids" type="ganalytics" default="" class="single"
			label="Select Profiles" description="The profiles" />
		<param name="selectTotalVisitors" type="radio" default="yes" label="Show Total Visitors"
			description="Whether the total visitors row should be shown.">
			<option value="yes">Yes</option>
			<option value="no">No</option>
		</param>
		<param name="selectVisitorsDay" type="radio" default="yes" label="Show Visitors A Day"
			description="Whether the visitors a day row should be shown.">
			<option value="yes">Yes</option>
			<option value="no">No</option>
		</param>
		<param name="@spacer" type="spacer" default="" label=""
			description="" />
		<param name="moduleclass_sfx" type="text" size="80" default=""
			label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
	</params>
	<params group="advanced">
	</params>
</install>
